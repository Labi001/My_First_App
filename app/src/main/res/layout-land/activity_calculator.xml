<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activities.Calculator_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_weight="1.5">

        <EditText
            android:id="@+id/inputBox"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/white"
            android:ems="10"
            android:gravity="end"
            android:inputType="none"
            android:padding="10dp"
            android:textSize="35sp"/>

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_marginEnd="10dp"
            android:textSize="60sp"/>

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:src="@drawable/ic_back_btn_vector"
            app:tint="@color/btn_color" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/first_row_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/ac_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_margin="1dp"
                android:text="AC"
                android:onClick="OnClearClick"
                android:textColor="@color/white"
                android:backgroundTint="@color/btn_op_color"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_plus_minus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:text="+/-"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="OnNegativeClick"
                android:textColor="@color/white"
                android:backgroundTint="@color/btn_op_color"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_op_modular"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="%"
                android:onClick="OnOperatorClick"
                android:textColor="@color/white"
                android:backgroundTint="@color/btn_op_color"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_op_pjestimi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="รท"
                android:onClick="OnOperatorClick"
                android:textColor="@color/white"
                android:backgroundTint="@color/btn_op_color"
                android:textSize="24sp"
                android:textStyle="bold"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_row_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/bt_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_margin="1dp"
                android:text="7"
                android:onClick="OnClickNumber"
                android:textColor="@color/white"
                android:backgroundTint="@color/btn_color"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/bt_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:text="8"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="OnClickNumber"
                android:textColor="@color/white"
                android:backgroundTint="@color/btn_color"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/bt_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_margin="1dp"
                android:text="9"
                android:onClick="OnClickNumber"
                android:textColor="@color/white"
                android:backgroundTint="@color/btn_color"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_op_shumezim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_margin="1dp"
                android:text="x"
                android:onClick="OnOperatorClick"
                android:textColor="@color/white"
                android:backgroundTint="@color/btn_op_color"
                android:textSize="24sp"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_row_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/bt_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_margin="1dp"
                android:text="4"
                android:onClick="OnClickNumber"
                android:textColor="@color/white"
                android:backgroundTint="@color/btn_color"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/bt_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_margin="1dp"
                android:onClick="OnClickNumber"
                android:textColor="@color/white"
                android:backgroundTint="@color/btn_color"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/bt_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_margin="1dp"
                android:text="6"
                android:onClick="OnClickNumber"
                android:textColor="@color/white"
                android:backgroundTint="@color/btn_color"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_op_plus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="+"
                android:layout_margin="1dp"
                android:onClick="OnOperatorClick"
                android:textColor="@color/white"
                android:backgroundTint="@color/btn_op_color"
                android:textSize="24sp"
                android:textStyle="bold"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/four_row_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/bt_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_margin="1dp"
                android:text="1"
                android:onClick="OnClickNumber"
                android:textColor="@color/white"
                android:backgroundTint="@color/btn_color"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/bt_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_margin="1dp"
                android:onClick="OnClickNumber"
                android:textColor="@color/white"
                android:backgroundTint="@color/btn_color"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/bt_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_margin="1dp"
                android:text="3"
                android:onClick="OnClickNumber"
                android:textColor="@color/white"
                android:backgroundTint="@color/btn_color"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_op_minus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="-"
                android:onClick="OnOperatorClick"
                android:textColor="@color/white"
                android:backgroundTint="@color/btn_op_color"
                android:textSize="24sp"
                android:textStyle="bold"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/five_row_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/ac_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_margin="1dp"
                android:text="0"
                android:onClick="OnClickNumber"
                android:textColor="@color/white"
                android:backgroundTint="@color/btn_color"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_pik"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="."
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_margin="1dp"
                android:onClick="OnClickNumber"
                android:textColor="@color/white"
                android:backgroundTint="@color/btn_color"
                android:textSize="24sp"
                android:textStyle="bold"/>


            <Button
                android:id="@+id/btnequal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="="
                android:onClick="OnEqualClick"
                android:textColor="@color/white"
                android:backgroundTint="@color/btn_equal_color"
                android:textSize="24sp"
                android:textStyle="bold"/>


        </LinearLayout>



    </LinearLayout>


</LinearLayout>